<!DOCTYPE html>

@{
    var row = (List<MailConfirmation.OPOR>)ViewBag.SatinalmaVerileri ?? new List<MailConfirmation.OPOR>();
    //var users = (List<MailConfirmation.OUSR>)ViewBag.Kullanicilar ?? new List<MailConfirmation.OUSR>();
    var rowSiparis = (List<MailConfirmation.ORDR>)ViewBag.SatisVerileri ?? new List<MailConfirmation.ORDR>();
}
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width = device-width, initial-scale = 1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.js"></script>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <title>Satınalma Onaylama</title>
    <style>
        body {
            font-family: "Verdana"
        }
    </style>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
</head>

<body>
    <div class="container">
        <form action="/Home/ConfirmSatinalma" id="satinalmaOnay" method="post" enctype="multipart/form-data">

            <div style="width: 900px; margin: 20px auto; border: 5px solid #ddd;">
                <div style="width: 100%; height: 150px; border-bottom: 3px solid #ddd;">
                    <div style="float: left; color: #666; font-size: 14px; margin-top: 30px; margin-left: 20px;">
                        <b>Satınalma Sipariş No: </b>@row.First().DocNum
                        <br />
                        <b>Satıcı: </b>@row.First().CardName
                    </div>
                    <div style="float: right; margin-top: 30px; margin-right: 25px;"><img src="~/Images/otatlogo.png" width="200"></div>

                </div>
                <input type="text" name="docEntry" value="@row.First().DocEntry.ToString()" hidden />
                <div style="border: 1px solid #ddd; border-left: 2px solid #ddd; border-right: 2px solid #ddd; background: #f2f2f2; padding: 10px; margin-top: 25px; margin-bottom: 25px; margin-left: 15px; margin-right: 15px; padding: 50px;">


                    <div class="row g-3">
                        <div class="col">
                            <label class="form-label">Sipariş Tarihi</label>
                            @if (@row.Count > 0)
                            {
                                <input type="text" name="tarih" value="@row.First().DocDate.Value.ToString("dd/MM/yyyy")" class="form-control" placeholder="Tarih" readonly>
                            }

                        </div>
                    </div>
                    <br />
                    <div class="row g-3">
                        <div class="col">
                            <label class="form-label">Tutar</label>
                            @if (@row.Count > 0)
                            {
                                <input type="text" name="DocTotal" value="@row.First().DocTotal.Value.ToString("#,#0.00")" class="form-control" placeholder="Tutar" readonly>
                            }
                        </div>
                        <div class="col">
                            <label class="form-label">Satış Sipariş Müşterisi</label>
                            @if (@row.Count > 0)
                            {
                                @*<input type="text" name="talepEden" value="@row.First().CardName.ToString()" class="form-control" placeholder="Tutar" readonly>*@
                                @*<input type="text" name="talepEden" value="@users.Where(x=>x.USERID==row.First().UserSign2).Select(y=>y.U_NAME).FirstOrDefault()" class="form-control" readonly>*@
                                <input type="text" name="talepEden" value="@rowSiparis[0].CardName.ToString()" class="form-control" readonly>
                            }
                        </div>
                    </div>
                    <br />

                    <div class="row g-3">
                        <div class="col">
                            <label class="form-label">Onaylayan</label>
                            <input type="text" name="onaylayan" class="form-control" placeholder="Onaylayan" value="Mustafa Başaran">
                        </div>
                        <div class="col">
                            <label class="form-label">Cevap</label>
                            <select class="form-control" name="cevap" id="cvp">
                                <option value="1">Onay</option>
                                <option value="2">Red</option>
                            </select>
                        </div>

                    </div><br>
                    <div class="col">
                        <label class="form-label">Açıklamalar</label>
                        <textarea name="aciklamalar" id="aciklamalar" class="form-control"></textarea>
                    </div>

                    <br>
                    <button name="gonder" id="gonder" type="submit" onclick="return CheckData();" class="btn btn-primary btn-lg" style="width: 100%;">
                        Gönder <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-shift-fill" viewBox="0 0 16 16">
                            @*<path d="M7.27 2.047a1 1 0 0 1 1.46 0l6.345 6.77c.6.638.146 1.683-.73 1.683H11.5v3a1 1 0 0 1-1 1h-5a1 1 0 0 1-1-1v-3H1.654C.78 10.5.326 9.455.924 8.816L7.27 2.047z" />*@
                        </svg>
                    </button>
                    <br />
                    <br />
                    <p style="color:red">Onaylama durumu red olması durumunda açıklama girilmesi zorunldur.</p>
                </div>
                <div style="width: 870px; background: #f3f3f3; border-top: 2px solid #ddd; bottom: 0px; margin-bottom: 0px; padding: 15px; font-size: 12px; line-height: 25px;">

                    <span style="color: blue;">AİF BİLİŞİM VE DANIŞMANLIK HİZMETLERİ LTD. ŞTİ.</span><br>
                    <span style="color: #666;"><b>Adres: </b> 19 Mayıs Mah. İnönü Cad. Sümer Sok. Zitaş Plaza C2 Blok No:3-B/4 Kadıköy/İstanbul</span><br>
                    <span style="color: #666;"><b>Tel: </b>+90 (216) 225 07 27 <b>Destek: </b>+90 (850) 223 07 27 <b>Whatsapp: </b>+90 (546) 648 02 05</span><br><br>
                    <span style="color: #666;">2021 © Tüm hakları saklıdır.</span><br>
                    <span style="color: #666;"><a href="https://www.linkedin.com/company/aifbilisim" target="_blank"><img src="data:image/png;base64,"></a></span><br>

                </div>

            </div>
        </form>
    </div>
</body>
</html>
<script type="text/javascript">
    $(document).ready(function () {
        $("#cvp").val(@ViewBag.onayTipi);
    });

    function CheckData() {
        var cevap = $("#cvp").val();
        var aciklamalar = $("#aciklamalar").val();
        if (cevap=="2") {
            if (aciklamalar=="") {
                swal({
                title: "Hata!",
                text: "Lütfen Red Açıklaması Giriniz.",
                icon: "error",
                button: "Tamam",
            });
                return false;
            }
        }
        return true;
    }

